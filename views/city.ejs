<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <base href="/">
    <meta name="viewport" content="width=device-width, intial-scale=1.0" />
    <link rel="stylesheet" href="vendors/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="vendors/css/ionicons.css" />
    <link rel="stylesheet" href="resources/css/index.css" type="text/css" />
    <link rel="stylesheet" href="resources/css/queries.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <title>ISAD</title>
  </head>

  <body>

    <!-- Navbar -->

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
            aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="/" class="navbar-brand">ISAD</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <% if(currentUser) { %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/<%= currentUser.username %>">Logged in as <%= currentUser.username %></a></li>
            <li><a href="/new">New Article</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
          <% } %>
        </div>
      </div>
    </nav>

    <!-- Articles -->

    <div class="container city-container">
      <div class="jumbotron">
        <h2>What we are doing at <span class="capital-letter"><%= city %></span></h2>
      </div>
      <div class="articles-container">
        <div class="row" style="display:flex; flex-wrap:wrap;">
          <% articles.forEach(function(article) { %>
            <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="thumbnail">
                <h4 style="color:rgb(184, 58, 41)"><%= article.title %></h4>
                <img src="<%= article.image %>">
                <p><%= article.body.substring(0, 50) %>...</p>
                <a class="btn btn-large btn-primary" href="/<%= article.city %>/<%= article._id %>">Read more</a>
              </div>
            </div>
          <% }) %>
      </div>
      </div>
    </div>

    <!-- Footer -->

  <div class="footer">
    <div class="contaier text-center">
      <div class="row">
        <div class="col-sm-12">
          <p>ISAD &copy;2011-2018</p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <a><i class="ion-social-facebook"></i></a>
          <a><i class="ion-social-twitter"></i></a>
          <a><i class="ion-social-instagram"></i></a>
          <a><i class="ion-social-googleplus"></i></a>
          <a><i class="ion-social-pinterest"></i></a>
        </div>
      </div>
    </div>
  </div>

    <script src="/vendors/js/jquery-2.2.4.min.js"></script>
    <script src="/vendors/js/bootstrap.js"></script>
    <script src="/resources/js/index.js"></script>
  </body>
</html>